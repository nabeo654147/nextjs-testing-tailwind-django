{
  "name": "test-tailwind",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --env=jsdom --verbose"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "msw": "^0.35.0",
    "next": "12.0.9",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.4.6",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.9",
    "jest": "^27.4.7",
    "jest-css-modules": "^2.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    }
  }
}
